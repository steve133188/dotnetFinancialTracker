@page "/"
@inject AuthState Auth
@inject NavigationManager Nav

<PageTitle>Family Dashboard</PageTitle>

<div class="home-container">
    <div class="welcome-section">
        <div class="welcome-content">
            <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Size="Size.Large" Class="welcome-icon" />
            <div class="welcome-text">
                <MudText Typo="Typo.h4" Class="welcome-title">Welcome Home</MudText>
                <MudText Typo="Typo.body1" Class="welcome-subtitle">Family Financial Tracker</MudText>
            </div>
        </div>
    </div>

    <div class="quick-actions">
        <MudGrid>
            <MudItem xs="6">
                <MudCard Class="action-card" Elevation="0" @onclick="NavigateToFinance">
                    <MudCardContent Class="text-center">
                        <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Size="Size.Large" Color="Color.Default" Style="color: black;" />
                        <MudText Typo="Typo.subtitle2" Class="mt-2">Finance</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="6">
                <MudCard Class="action-card" Elevation="0" @onclick="NavigateToReports">
                    <MudCardContent Class="text-center">
                        <MudIcon Icon="@Icons.Material.Filled.Analytics" Size="Size.Large" Color="Color.Default" Style="color: black;" />
                        <MudText Typo="Typo.subtitle2" Class="mt-2">Reports</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        if (!Auth.IsAuthenticated)
        {
            Nav.NavigateTo("/login");
        }
    }

    private void NavigateToFinance() => Nav.NavigateTo("/finance");
    private void NavigateToReports() => Nav.NavigateTo("/reports");
}

<style>
.home-container {
    padding: 24px;
    background: #FFFFFF;
    min-height: 100vh;
}

.welcome-section {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 32px;
    padding: 24px 32px;
    background: linear-gradient(135deg, rgba(1, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.95) 100%);
    border: 1px solid rgba(1, 255, 255, 0.2);
    border-radius: 24px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
}

.welcome-content {
    display: flex;
    align-items: center;
    gap: 16px;
}

.welcome-icon {
    color: #01FFFF;
}

.welcome-title {
    color: #000000;
    font-weight: 700;
    margin: 0;
}

.welcome-subtitle {
    color: rgba(0, 0, 0, 0.7);
    margin: 0;
}

.quick-actions {
    margin-bottom: 32px;
}

.action-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(1, 255, 255, 0.2);
    border-radius: 16px;
    cursor: pointer;
    transition: all 0.25s ease;
}

.action-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border-color: rgba(1, 255, 255, 0.4);
}
</style>