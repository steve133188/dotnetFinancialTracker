        },
        new()
        {
            Name = "Dad (Mike)",
            Role = "Parent",
            Balance = 1800m,
            MonthlyAllowance = 0m,
            IsOnline = false,
            LastActivity = DateTime.Now.AddHours(-2),
            SpendingLimit = 4000m,
            SpentThisMonth = 980m,
            TransactionsThisMonth = 18,
            SavingsGoalProgress = 0.60,
            AchievementPoints = 120,
