        },
        new()
        {
            Name = "Emma",
            Role = "Teen",
            Balance = 150m,
            MonthlyAllowance = 200m,
            IsOnline = true,
            LastActivity = DateTime.Now.AddMinutes(-5),
            SpendingLimit = 300m,
            SpentThisMonth = 180m,
            TransactionsThisMonth = 12,
