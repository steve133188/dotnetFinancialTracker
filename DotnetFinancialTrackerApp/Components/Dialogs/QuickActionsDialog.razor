@using MudBlazor
@using DotnetFinancialTrackerApp.Models
@inject NavigationManager Nav

<MudDialog Class="quick-actions-dialog">
    <TitleContent>
        <div class="dialog-header">
            <MudIcon Icon="@Icons.Material.Filled.Bolt" Size="Size.Medium" Color="Color.Default" Style="color: black;" />
            <MudText Typo="Typo.h6">Quick Actions</MudText>
        </div>
    </TitleContent>
    <DialogContent>
        <div class="actions-grid">
            <!-- Add Transaction -->
            <MudCard Class="action-card" Clickable="true" @onclick="() => NavigateToAddTransaction()">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Add" Size="Size.Large" Class="action-icon" />
                    <MudText Typo="Typo.subtitle1" Class="action-title">Add Transaction</MudText>
                    <MudText Typo="Typo.body2" Class="action-description">Quick income or expense entry</MudText>
                </MudCardContent>
            </MudCard>

            <!-- Save Money to Jar -->
            <MudCard Class="action-card" Clickable="true" @onclick="() => NavigateToSavings()">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Savings" Size="Size.Large" Class="action-icon" />
                    <MudText Typo="Typo.subtitle1" Class="action-title">Save Money to Jar</MudText>
                    <MudText Typo="Typo.body2" Class="action-description">Put money aside for goals</MudText>
                </MudCardContent>
            </MudCard>

            <!-- Modify Budget -->
            <MudCard Class="action-card" Clickable="true" @onclick="() => NavigateToBudgets()">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Size="Size.Large" Class="action-icon" />
                    <MudText Typo="Typo.subtitle1" Class="action-title">Modify Budget</MudText>
                    <MudText Typo="Typo.body2" Class="action-description">Adjust spending limits</MudText>
                </MudCardContent>
            </MudCard>
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" Elevation="0" OnClick="@Close" StartIcon="@Icons.Material.Filled.Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance Dialog { get; set; } = default!;

    private void NavigateToAddTransaction()
    {
        Nav.NavigateTo("/finance");
        Dialog.Close();
    }

    private void NavigateToSavings()
    {
        Nav.NavigateTo("/wellbeing");
        Dialog.Close();
    }

    private void NavigateToBudgets()
    {
        Nav.NavigateTo("/finance");
        Dialog.Close();
    }

    private void Close() => Dialog.Cancel();
}

<style>
.quick-actions-dialog {
    max-width: 500px;
}

.dialog-header {
    display: flex;
    align-items: center;
    gap: 8px;
}

.actions-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
    padding: 8px 0;
}

.action-card {
    background: #FFFFFF;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 20px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
    transition: all 0.25s ease;
    cursor: pointer;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
}

.action-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border-color: rgba(0, 0, 0, 0.15);
}

.action-icon {
    color: #000000;
    margin-bottom: 12px;
}

.action-title {
    color: #000000;
    font-weight: 600;
    font-family: 'Inter', sans-serif;
    margin-bottom: 8px;
}

.action-description {
    color: rgba(0, 0, 0, 0.7);
    font-family: 'Inter', sans-serif;
    line-height: 1.4;
}

@@media (max-width: 767px) {
    .quick-actions-dialog {
        max-width: 90vw;
    }

    .actions-grid {
        gap: 12px;
    }
}
</style>
